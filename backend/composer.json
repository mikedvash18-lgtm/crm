{
  "name": "ai-call-platform/backend",
  "description": "AI Call Automation Platform - PHP Backend",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "firebase/php-jwt": "^6.0",
    "phpoffice/phpspreadsheet": "^1.29",
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
