# ============================================================
# AI Call Platform - Environment Configuration
# Copy this to .env and fill in your values
# ============================================================

APP_ENV=production
APP_DEBUG=false

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ai_call_platform
DB_USER=root
DB_PASS=your_password_here

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_immediately
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# Voximplant
VOXIMPLANT_WEBHOOK_SECRET=your_voximplant_webhook_secret
VOXIMPLANT_API_KEY=
VOXIMPLANT_ACCOUNT_ID=

# ElevenLabs
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=error
LOG_PATH=/var/log/ai-call-platform
